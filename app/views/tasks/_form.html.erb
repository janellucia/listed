<% if @task.errors.any? %>
<h3>Oooops something went wrong:</h3>
<ul>
    <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= simple_form_for @task, html: {class: 'form-signin'} do |f| %>
    <%= f.input :content, label: false, placeholder: 'Content', autofocus:true, :error => false %>

    <%= f.button :submit, class: 'btn btn-primary btn-block' %>
<% end %>
<p></p>
<p class='text-center'><%= link_to 'All tasks', tasks_path %></p>